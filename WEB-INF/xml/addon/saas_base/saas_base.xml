<MosP>
	
	<!-- SaaSクライアント機能URL -->
	<Application key="SaasClientName">
		client
	</Application>
	
	<!-- SaaSコンソール機能URL -->
	<Application key="SaasConsoleName">
		console
	</Application>
	
	<!-- 顧客DB作成用ユーザ -->
	<Application key="SuperUserName">
		postgres
	</Application>
	<Application key="SuperUserPassword">
		postgres
	</Application>
	
	<!-- SaaS顧客DB追加SQL -->
	<Application key="SaaSCustomerDbSqlFiles">
		<Value>addon/manage</Value>
		<AddValue>true</AddValue>
	</Application>
	
	<!-- メール設定(環境に応じて設定) -->
	<!-- メールホスト(SMTPサーバ) -->
	<Application key="MailHost">
	</Application>
	<!-- メールユーザ名(SMTPサーバ) -->
	<Application key="MailUserName">
	</Application>
	<!-- メールパスワード(SMTPサーバ) -->
	<Application key="MailPassword">
	</Application>
	<!-- メールアドレス -->
	<Application key="MailAddress">
	</Application>
	<!-- メール個人名 -->
	<Application key="MailPersonal">
	</Application>
	
	<!-- SaaS連絡先メールアドレス -->
	<Application key="SaaSContactMailAddress">
	</Application>
	
	<!-- 変更時パスワード最低文字数(SaaSコンソール機能用) -->
	<Application key="SaaSMinPassword">
		8
	</Application>
	
	<!-- 認証時クライアントアプリケーション合致確認要否(SaaSクライアント機能用) -->
	<Application key="SaaSClientAppMatch">
		true
	</Application>
	
	<!-- 利用規約URL -->
	<Application key="SaaSUserPolicyUrl">
		https://mosp.jp/
	</Application>
	
	<!-- SaaS顧客ユーザロールコード -->
	<Application key="SaaSCustomerUserRole">
		SS10
	</Application>
	
</MosP>
